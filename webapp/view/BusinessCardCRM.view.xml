<mvc:View controllerName="incentergy.bccrm.BusinessCardCRM.controller.BusinessCardCRM" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<SplitApp id="idAppControl" showNavButton="{device>/isPhone}" navButtonPress="onNavButtonPress">
		<masterPages>
			<Page title="{i18n>BusinessCards}">
				<List items="{/BusinessCards}">
					<StandardListItem text="{FirstName} {LastName}"></StandardListItem>
				</List>
				<footer>
					<Toolbar>
						<Button id="unauthorizeWithGoogle" icon="sap-icon://key" tooltip="{i18n>UnauthorizeGoogle}" press="unauthorizeWithGoogle" enabled="false"/>
						<Button id="authorizeWithGoogle" icon="sap-icon://primary-key" tooltip="{i18n>AuthorizeWithGoogle}" press="authorizeWithGoogle" enabled="false"/>
						<ToolbarSpacer />
						<Button icon="sap-icon://camera" press="onAddBusinessCard" />
					</Toolbar>
				</footer>
			</Page>
		</masterPages>
		<detailPages>
			<Page title="{i18n>title}">
				<content></content>
			</Page>
		</detailPages>
	</SplitApp>
</mvc:View>