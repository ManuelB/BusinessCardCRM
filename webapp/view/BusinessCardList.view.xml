<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="incentergy.bccrm.BusinessCardCRM.controller.BusinessCardList" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="{i18n>BusinessCards}">
		<List items="{/BusinessCards}">
			<StandardListItem text="{FirstName} {LastName}"></StandardListItem>
		</List>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button icon="sap-icon://camera" press="onAddBusinessCard"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>